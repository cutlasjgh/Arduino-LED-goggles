void tapTime(void) {
  // do something :)
   //Serial.print("Tap! ");
   //Serial.println(millis()); // the time
   int i;
    mode++;                        // Next mode
    if(mode > MAXMODES) {                 // End of modes?
      mode = 0;                    // Start modes over
