    }
    for(i=0; i<32; i++) strip.setPixelColor(i, 0);
}

void setup() {
#ifdef __AVR_ATtiny85__ // Trinket, Gemma, etc.
  if(F_CPU == 16000000) clock_prescale_set(clock_div_1);
#endif

  //cktplayground for tap sensing
  CircuitPlayground.begin();
  CircuitPlayground.setAccelRange(LIS3DH_RANGE_2_G);   // 2, 4, 8 or 16 G!
  // 0 = turn off click detection & interrupt
  // 1 = single click only interrupt output
  // 2 = double click only interrupt output, detect single click
  // Adjust threshhold, higher numbers are less sensitive
  CircuitPlayground.setAccelTap(1, CLICKTHRESHHOLD);
  // have a procedure called when a tap is detected
  attachInterrupt(digitalPinToInterrupt(7), tapTime, FALLING);
  
  strip.setBrightness(BRIGHTNESS); // 1/3 brightness = 85
  strip.begin();
  prevTime = millis();
}



void loop() {
  uint8_t  i;
  uint32_t t;

  switch(mode) {

   case 0: // Random sparks - just one LED on at a time!
    i = random(32);
    strip.setPixelColor(i, color);
    strip.show();
    delay(10); //milliseconds
    strip.setPixelColor(i, 0);
    break;
 
   case 1: // Spinny wheels (8 LEDs on at a time)
    for(i=0; i<16; i++) {
      uint32_t c = 0;
      if(((offset + i) & 7) < 2) c = color; // 4 pixels on...
      strip.setPixelColor(   i, c); // First eye
      strip.setPixelColor(31-i, c); // Second eye (flipped)
    }
    strip.show();
    offset++;
    delay(80);
    break;
    
    case 2: // 
